extends layout

block body
  div(ng-controller='MainCtrl')
    div.navbar.navbar-inverse.navbar-static-top
      button.navbar-toggle(type='button',data-toggle='collapse',data-target='.navbar-responsive-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Greystone Worktools
      div.nav-collapse.collapse.navbar-responsive-collapse
        ul.nav.navbar-nav
          li
            a(href='/') Dashboard
          li(ng-repeat='tool in tools')
            a(href='/{{tool.link}}') {{tool.title}}
        ul.nav.navbar-nav.pull-right
          li.dropdown
            a.dropdown-toggle(role='button',data-toggle='dropdown',href='#')
              strong Admin
              span.caret
            ul.dropdown-menu(id='g-account-menu',role='menu')
              li
                a(href='#') My Profile
          li
            a(href='/logout',ng-click='logout()') Log out
    div.container
      div.app-view(ng-view)
  // script(src="/socket.io/socket.io.js")
  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular/angular-resource.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers/dashboard.js')
  script(src='js/controllers/onboarding.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
